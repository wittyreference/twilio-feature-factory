{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/pre-write-validate.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/pre-bash-validate.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/post-write.sh"
          },
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/flywheel-doc-check.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/post-bash.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/subagent-log.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/archive-plan.sh"
          },
          {
            "type": "command",
            "command": "$(git rev-parse --show-toplevel)/.claude/hooks/notify-ready.sh"
          }
        ]
      }
    ]
  },
  "disabledMcpjsonServers": [
    "twilio-agent-payments"
  ],
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch"
    ]
  },
  "env": {
    "MAX_THINKING_TOKENS": "63999"
  }
}
