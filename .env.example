# Twilio Account Credentials
# Find these at https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio API Key (recommended for production)
# Create at https://console.twilio.com/us1/account/keys-credentials/api-keys
TWILIO_API_KEY=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_SECRET=your_api_secret_here

# Twilio Phone Number (E.164 format)
# Purchase at https://console.twilio.com/us1/develop/phone-numbers/manage/incoming
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Verify Service SID (for phone verification)
# Create at https://console.twilio.com/us1/develop/verify/services
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Sync Service SID (for real-time state synchronization)
# Create at https://console.twilio.com/us1/develop/sync/services
TWILIO_SYNC_SERVICE_SID=ISxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# TaskRouter Workspace and Workflow SIDs (for task routing)
# Create at https://console.twilio.com/us1/develop/taskrouter/workspaces
TWILIO_TASKROUTER_WORKSPACE_SID=WSxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_TASKROUTER_WORKFLOW_SID=WWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Messaging Service SID (for sender pools and compliance)
# Create at https://console.twilio.com/us1/develop/sms/services
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Voice SDK TwiML Application SID (for browser-based softphone testing)
# Create via: twilio api:core:applications:create --friendly-name "Voice SDK Test" \
#   --voice-url https://[deployed-domain]/voice/sdk-handler --voice-method POST
TWILIO_VOICE_SDK_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Test recipient phone number for E2E tests
TEST_PHONE_NUMBER=+1xxxxxxxxxx

# Conference testing numbers (for multi-party call tests)
# These should be distinct numbers on your account for realistic conference scenarios
CONFERENCE_HOST_NUMBER=+1xxxxxxxxxx
CONFERENCE_PARTICIPANT_1=+1xxxxxxxxxx
CONFERENCE_PARTICIPANT_2=+1xxxxxxxxxx

# Optional: Conversation Relay WebSocket URL (for voice AI features)
CONVERSATION_RELAY_URL=wss://your-websocket-server.com/relay

# Anthropic API Key (for ConversationRelay AI agent integration)
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Optional: Status callback and fallback URLs for webhooks
# These are used by the auto-setup script to configure phone number webhooks
TWILIO_STATUS_CALLBACK_URL=https://your-domain.com/statusCallback
TWILIO_FALLBACK_URL=https://your-domain.com/fallback

# Optional: ngrok configuration (for agent-to-agent testing)
# Agent-to-agent testing requires two separate ngrok domains
# Create domains at https://dashboard.ngrok.com/domains
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
NGROK_DOMAIN_A=your-domain-a.ngrok.dev
NGROK_DOMAIN_B=your-domain-b.ngrok.io
